{# Meet The Team - Variant 1 #}
<div class="bg-gray-100 py-8">
  <div class="container">
    <div class="flex flex-wrap md:-mx-5">
      {% for person in teamMembers %}
        <div class="w-full md:w-1/2 lg:w-1/4 md:px-5 mb-8 lg:mb-0">
          <div class="bg-white w-full rounded-md shadow-lg">
            <div class="flex flex-wrap justify-center">
              {% if fractal %}
                {% if person.team_member_image %}
                  <div class="w-full">
                    <img class="block w-full mb-4 rounded-t-md" src="{{ person.team_member_image.src }}" alt="{{ person.title }}" />
                  </div>
                {% endif %}
              {% else %}
                {% if person.meta('team_member_image') %}
                  <div class="w-full">
                    <img data-src="{{ person.meta('team_member_image').url|resize(600,350) }}" alt="{{ person.title }}" class="block w-full mb-4 rounded-t-md lazyload" />
                  </div>
                {% endif %}
              {% endif %}

              {% if person.title %}
                <div class="w-full">
                  <span class="block text-xl md:text-2xl text-center text-primary">{{ person.title }}</span>
                </div>
              {% endif %}

              {% if person.team_member_job_title %}
                <div class="w-full">
                  <span class="block uppercase text-sm md:text-base tracking-wider text-center text-primary-light mb-8 px-4">{{ person.team_member_job_title }}</span>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>