{# Meet The Team - Variant 3 #}
<div class="py-8">
  <div class="container">
    <div class="flex flex-wrap md:-mx-5">
      {% for person in teamMembers %}
        <div class="w-full md:w-1/2 lg:w-1/4 md:px-5 mb-8 lg:mb-0">
          <div class="w-full">
            <div class="flex flex-wrap justify-center">
              {% if fractal %}
                {% if person.team_member_image %}
                  <img class="block w-full mb-4" src="{{ person.team_member_image.src }}" alt="{{ person.title }}" />
                {% endif %}
              {% else %}
                {% if person.meta('team_member_image') %}
                  <img data-src="{{ person.meta('team_member_image').url|resize(600, 350) }}" alt="{{ person.title }}" class="block w-full mb-4 lazyload" />
                {% endif %}
              {% endif %}

              {% if person.team_member_job_title %}
                <div class="w-full">
                  <span class="block uppercase text-sm tracking-wider text-primary-light">{{ person.team_member_job_title }}</span>
                </div>
              {% endif %}

              {% if person.title %}
                <div class="w-full">
                  <span class="block text-xl md:text-2xl text-primary">{{ person.title }}</span>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>