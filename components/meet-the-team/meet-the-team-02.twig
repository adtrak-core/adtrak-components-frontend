{# Meet The Team - Variant 2 #}
<div class="bg-gray-100 py-8">
  <div class="container">
    <div class="flex flex-wrap md:-mx-5">
      {% for person in meetTheTeam %}
        <div class="w-full md:w-1/2 lg:w-1/4 md:px-5 mb-8 lg:mb-0{{ person.image ? ' pt-16' : '' }}">
          <div class="bg-secondary w-full rounded rounded-md">
            <div class="flex flex-wrap justify-center">
              {% if person.image %}
                <img class="block w-32 h-32 mb-4 rounded-full border-4 border-secondary -mt-16" src="{{ person.image.src }}" alt="{{ person.name }}" />
              {% endif %}

              {% if person.name %}
                <div class="w-full">
                  <span class="block text-xl md:text-2xl text-center text-white">{{ person.name }}</span>
                </div>
              {% endif %}

              {% if person.jobTitle %}
                <div class="w-full">
                  <span class="block uppercase text-sm md:text-base tracking-wider text-center text-secondary-light mb-8 px-4">{{ person.jobTitle }}</span>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>