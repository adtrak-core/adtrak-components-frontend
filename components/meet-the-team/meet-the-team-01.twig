{# Meet The Team - Variant 1 #}
<div class="bg-gray-100 py-8">
  <div class="container">
    <div class="flex flex-wrap md:-mx-5">
      {% for person in meetTheTeam %}
        <div class="w-full md:w-1/2 lg:w-1/4 md:px-5 mb-8 lg:mb-0">
          <div class="bg-white w-full rounded rounded-md shadow shadow-lg">
            <div class="flex flex-wrap justify-center">
              {% if person.image %}
                <div class="w-full">
                  <img class="block w-full mb-4 rounded-t-md" src="{{ person.image.src }}" alt="{{ person.name }}" />
                </div>
              {% endif %}

              {% if person.name %}
                <div class="w-full">
                  <span class="block text-xl md:text-2xl text-center text-primary">{{ person.name }}</span>
                </div>
              {% endif %}

              {% if person.jobTitle %}
                <div class="w-full">
                  <span class="block uppercase text-sm md:text-base tracking-wider text-center text-primary-light mb-8 px-4">{{ person.jobTitle }}</span>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>