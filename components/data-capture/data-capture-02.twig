<div class="py-5 md:py-8 bg-primary text-white">
  <div class="container">
    <div class="w-auto pb-5">
      <span class="block font-bold text-xl lg:text-2xl leading-tight mb-1">Stay up to date</span>
      <span class="block text-sm text-primary-light">Subscribe to our mailing list</span>
    </div>

    <form class="flex flex-wrap">
      <div class="w-full pb-5">
        <label class="sr-only" for="name">Your Name</label>
        <input class="border border-gray-400 p-2 rounded focus:outline-none focus:shadow-outline w-full" id="name" type="text" placeholder="Your Name">
      </div>
      <div class="w-full pb-5">
        <label class="sr-only" for="email">Your Email Address</label>
        <input class="border border-gray-400 p-2 rounded focus:outline-none focus:shadow-outline w-full" id="email" type="text" placeholder="Your Email Address">
      </div>
      <div class="w-auto ml-auto pb-5">
        <button class="bg-secondary hover:bg-secondary-dark focus:bg-secondary-dark text-center rounded-md text-white block px-5 py-2" type="button">Subscribe</button>
      </div>
    </form>
  </div>
</div>