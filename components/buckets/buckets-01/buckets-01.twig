{# Buckets - Variant 1 #}
<div class="overflow-hidden">
  <div class="container overflow-x-hidden">
    <div class="flex flex-wrap md:-mx-5">
      {% for bucket in buckets %}
        <div class="w-full mb-8 md:w-1/2 lg:w-1/4 md:px-5 lg:mb-0">
          <div class="w-full p-5 bg-white border border-gray-200 rounded-lg">
            <div class="flex flex-wrap justify-center">
              {% if bucket.thumbnail %}
                {% if fractal %}
                  <div class="w-full">
                    <img class="block w-full mb-4 rounded-lg" src="{{ bucket.thumbnail.src }}" alt="{{ bucket.thumbnail.title }}" />
                  </div>
                {% else %}
                  <div class="w-full">
                    {% include "_components/picture.twig" with {
                      source: bucket.thumbnail.src,
                      pictureClasses: "lazyload w-full block",
                      lazyload: true,
                      breakpoints: {
                        "1280px" : {
                          classes: 'w-full rounded object-cover',
                          w: 500,
                          h: 250,
                          crop: 'center'
                        },
                      },
                      img: {
                        classes: 'w-full rounded object-cover lazyload',
                        alt: bucket.thumbnail.title,
                        w: 500,
                        h: 200,
                        crop: 'center',
                      }
                    } %}
                  </div>
                {% endif %}
              {% endif %}

              {% if bucket.post_title %}
                <div class="w-full">
                  <span class="block mb-4 text-xl tracking-wider text-center uppercase md:text-2xl">{{ bucket.post_title }}</span>
                </div>
              {% endif %}

              {% if bucket.link %}
                <div>
                  <a href="{{ bucket.link }}" class="block w-full px-4 py-2 text-center text-white border-2 border-transparent rounded-md bg-primary-light hover:bg-primary focus:bg-primary md:w-auto">Read More</a>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>