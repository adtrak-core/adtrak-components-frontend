{# Buckets - Variant 1 #}
<div class="overflow-hidden">
  <div class="container">
    <div class="flex flex-wrap md:-mx-5">
      {% for bucket in buckets %}
        <div class="w-full md:w-1/2 lg:w-1/4 md:px-5 mb-8 lg:mb-0">
          <div class="bg-white rounded-lg border border-gray-200 w-full p-5">
            <div class="flex flex-wrap justify-center">
              {% if bucket.thumbnail %}
                {% if fractal %}
                  <div class="w-full">
                    <img class="rounded-lg block w-full mb-4" src="{{ bucket.thumbnail.src }}" alt="{{ bucket.thumbnail.title }}" />
                  </div>
                {% else %}
                  <div class="w-full">
                    {% include "_components/picture.twig" with {
                      source: bucket.thumbnail.src,
                      pictureClasses: "lazyload w-full block",
                      lazyload: true,
                      breakpoints: {
                        "1280px" : {
                          classes: 'w-full rounded object-cover',
                          w: 500,
                          h: 250,
                          crop: 'center'
                        },
                      },
                      img: {
                        classes: 'w-full rounded object-cover',
                        alt: bucket.thumbnail.title,
                        w: 500,
                        h: 200,
                        crop: 'center',
                      }
                    } %}
                  </div>
                {% endif %}
              {% endif %}

              {% if bucket.post_title %}
                <div class="w-full">
                  <span class="block text-xl md:text-2xl uppercase tracking-wider text-center mb-4">{{ bucket.post_title }}</span>
                </div>
              {% endif %}

              {% if bucket.link %}
                <div>
                  <a href="{{ bucket.link }}" class="bg-primary-light hover:bg-primary focus:bg-primary text-center border-2 border-transparent rounded-md text-white block px-4 py-2 w-full md:w-auto">Read More</a>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>