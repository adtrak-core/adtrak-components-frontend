{# Buckets - Variant 3 #}
<div class="py-8 bg-primary">
  <div class="container">
    <div class="flex flex-wrap md:-mx-5">
      {% for bucket in buckets %}
        <div class="w-full mb-8 md:w-1/2 lg:w-1/4 md:px-5 lg:mb-0 group">
          <div class="bg-white">
            {% if bucket.thumbnail %}
              {% if fractal %}
                <div class="w-full">
                  <img class="block w-full mb-4" src="{{ bucket.thumbnail.src }}" alt="{{ bucket.thumbnail.title }}" />
                </div>
              {% else %}
                <div class="w-full">
                  {% include "_components/picture.twig" with {
                    source: bucket.thumbnail.src,
                    pictureClasses: "lazyload w-full block",
                    lazyload: true,
                    breakpoints: {
                      "1280px" : {
                        classes: 'w-full object-cover',
                        w: 500,
                        h: 250,
                        crop: 'center'
                      },
                    },
                    img: {
                      classes: 'w-full object-cover lazyload',
                      alt: bucket.thumbnail.title,
                      w: 500,
                      h: 200,
                      crop: 'center',
                    }
                  } %}
                </div>
              {% endif %}
            {% endif %}

            <div class="flex flex-wrap justify-center p-6">
              {% if bucket.post_title %}
                <div class="w-full">
                  <span class="block mb-4 text-xl leading-tight text-center">{{ bucket.post_title }}</span>
                </div>
              {% endif %}

              {# {% if bucket.description %}
                <div class="w-full">
                  <span class="block px-4 mb-5 text-center opacity-50 text-primary">{{ bucket.description }}</span>
                </div>
              {% endif %} #}

              {% if bucket.link %}
                <div class="mx-auto">
                  <a href="{{ bucket.link }}" class="inline-block px-4 py-2 mx-auto text-center text-white bg-transparent border-2 border-transparent rounded-md text-primary-light border-primary-light hover:border-secondary focus:border-secondary hover:text-secondary focus:text-secondary">More Info</a>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>