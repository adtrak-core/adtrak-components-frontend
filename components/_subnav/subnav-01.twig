  <nav
    role="navigation"
    aria-label="Sub Navigation"
    class="bg-white inline-block rounded-lg w-full max-w-xs shadow-lg"
  >
    <ul>
      {% for item in subNav %}
        <li class="{{ loop.index != loop.length ? 'border-b border-gray-200' : '' }}">
          <a class="text-secondary uppercase tracking-wider px-5 py-3 block hover:bg-gray-100 focus:bg-gray-100 hover:pl-6 focus:pl-6 transition-all duration-300 ease-in-out {{ loop.index != loop.length ? ' ' : ' rounded-b-lg' }}{{ loop.index == 0 ? ' ' : ' rounded-t-lg' }}" href="{{ item.href }}">{{ item.title }}</a>
        </li>
      {% endfor %}
    </ul>
  </nav>
