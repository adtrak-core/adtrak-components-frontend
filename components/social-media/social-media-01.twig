{# Social Media - Variant 1 #}
<div class="container py-8 text-center">
  <div class="align-middle">
    <span class="inline-block pr-4 text-2xl font-bold md:text-3xl text-primary-dark">Follow us on Social Media!</span>

    <div class="inline-block">
      {% if options.social_facebook %}
        <a target="_blank" rel="noopener noreferrer" aria-label="Like us on Facebook" href="{{ options.social_facebook }}" class="inline-block px-4 py-2 my-2 mr-2 text-lg border-2 rounded border-primary-light text-primary-light hover:border-primary focus:border-primary hover:text-primary focus:text-primary">Facebook</a>
      {% endif %}
      {% if options.social_twitter %}
        <a target="_blank" rel="noopener noreferrer" aria-label="Follow us on Twitter" href="{{ options.social_twitter }}" class="inline-block px-4 py-2 my-2 mr-2 text-lg border-2 rounded border-primary-light text-primary-light hover:border-primary focus:border-primary hover:text-primary focus:text-primary">Twitter</a>
      {% endif %}
      {% if options.social_instagram %}
        <a target="_blank" rel="noopener noreferrer" aria-label="Follow us on Instagram" href="{{ options.social_instagram }}" class="inline-block px-4 py-2 my-2 mr-2 text-lg border-2 rounded border-primary-light text-primary-light hover:border-primary focus:border-primary hover:text-primary focus:text-primary">Instagram</a>
      {% endif %}

      {% for item in options.social_other %}
        <a target="_blank" rel="noopener noreferrer" aria-label="Find us on {{ item.name }}" href="{{ item.url }}" class="inline-block px-4 py-2 my-2 mr-2 text-lg border-2 rounded border-primary-light text-primary-light hover:border-primary focus:border-primary hover:text-primary focus:text-primary">{{ item.name }}</a>
      {% endfor %}
    </div>
  </div>
</div>