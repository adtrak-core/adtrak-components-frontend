{# Projects - Variant 2 #}
<div class="bg-gray-200 p-8">
  {% for project in projects %}
    <div class=" bg-white rounded-lg shadow-lg mb-4">
      <div class="{{ project.active ? 'mb-2' : 'mb-0' }}">
        <button aria-expanded="false" aria-controls="project-{{ loop.index }}" class="font-bold text-secondary text-left block w-full py-6 px-8 md:px-12 xl:px-20 hover:text-secondary-dark focus:text-secondary-dark">
          {{ project.heading }}
        </button>
      </div>
      {% if project.active %}
        <div class="px-8 md:px-12 xl:px-20 pb-6" id="project-{{ loop.index }}">
          <div class="flex flex-wrap w-full md:-mx-3">
            {% if project.gallery %}
              <div class="w-full md:w-5/12 md:px-3 mb-5 md:mb-0">
                <img src="{{ project.gallery[0].url }}" alt="{{ project.heading }}" class="w-full rounded" />
              </div>
            {% endif %}

            <div class="text-primary prose-sm md:prose mb-5{{ project.gallery.length > 0 ? ' w-full md:w-7/12 md:px-3' : ' w-full' }}">
              {{ project.text }}
            </div>
          </div>
        </div>
      {% endif %}
    </div>
  {% endfor %}
</div>