{# Content Area - Variant 3 #}
<div class="bg-white overflow-hidden">
  <div class="container py-6 md:py-10">
    <div class="flex flex-wrap md:-mx-8">
      <div class="w-full md:w-7/12 md:px-8 mb-8 md:mb-0">
        <div class="prose-sm md:prose text-primary max-w-none md:max-w-none">
          <h1>{{ post.title }}</h1>
          
          {{ post.content }}
        </div>
      </div> 

      {% if not fractal and post.meta('content_why_choose_us') | length %}
        {% set whyChooseUs = post.meta('content_why_choose_us') %}
      {% elseif options.content_why_choose_us | length %}
        {% set whyChooseUs = options.content_why_choose_us %}
      {% endif %}

      {% if whyChooseUs %}
        <div class="w-full md:w-5/12 md:px-8">
          <div class="bg-gray-100 p-8 lg:p-12 text-primary">
            <span class="block font-bold text-lg md:text-xl xl:text-2xl mb-3">Why Choose Us?</span>
            <ul>
            {% for item in whyChooseUs %}
              <li class="{% if not loop.last %}border-b{% endif %} border-gray-300 py-3">{{ item.text }}</li>
            {% endfor %}
            </ul>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>