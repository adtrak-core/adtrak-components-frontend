{# Footer - Variant 2 #}
<footer class="bg-primary text-white">
  <div class="py-12 bg-primary-dark">
    <div class="container">
      {% if fractal %}
        <span class="block text-2xl text-center leading-tight"><span class="text-primary-light">Lorem ipsum dolor sit amet consec?</span> Call for <span class="font-bold">free advice</span> on <a href="tel:08000000000" class="inline-block text-secondary font-bold hover:text-secondary-dark focus:text-secondary-dark">0800 000 000</a> or <a href="/contact" class="bg-secondary hover:bg-secondary-dark focus:bg-secondary-dark text-white px-4 py-2 inline-block rounded text-base ml-3">Contact Online</a></span>
      {% else %}
        {# @INTEGRATION - double check this /contact path is correct #}
        {# @INTEGRATION - update your footer "CTA" text here #}
        <span class="block text-2xl text-center leading-tight"><span class="text-primary-light">Lorem ipsum dolor sit amet consec?</span> Call for <span class="font-bold">free advice</span> on <span class="inline-block text-secondary font-bold hover:text-secondary-dark focus:text-secondary-dark">{% do action('ld_default') %}</span> or <a href="/contact" class="bg-secondary hover:bg-secondary-dark focus:bg-secondary-dark text-white px-4 py-2 inline-block rounded text-base ml-3">Contact Online</a></span>
      {% endif %}
    </div>
  </div>

  <div class="py-12 md:py-16 xl:py-24 border-b border-primary-light border-opacity-25">
    <div class="container">
      <div class="flex flex-wrap sm:-mx-5 justify-center">
        <div class="w-full sm:w-1/2 md:w-1/4 sm:px-5 mb-8 md:mb-0">
          <address class="not-italic">
            {% if fractal %}
              <span class="block" property="name">Company Name</span>
              <span class="block" property="addressLocality">123 Main Road</span>
              <span class="block" property="addressRegion">Location</span>
              <span class="block" property="postalCode">AB12 3CD</span>
              <span class="block" property="addressCountry">United Kingdom</span>
            {% else %}
              {{ function('address_stacked') }}</p>
            {% endif %}
          </address>
        </div>
        
        <div class="w-full sm:w-1/2 md:w-1/4 sm:px-5 mb-8 md:mb-0">
          {% if options.site_email %}
            <a href="mailto:{{ options.site_email }}" class="block no-underline break-words hover:text-secondary focus:text-secondary">{{ options.site_email }}</a>
          {% endif %}
          {% if fractal %}
            <a href="tel:0800000000" class="block no-underline mb-5 hover:text-secondary focus:text-secondary">0800 000 0000</a>
          {% else %}
            <span class="mb-5 block">
              {% do action('ld_default') %}
            </span>
          {% endif %}
        </div>

        {% if primaryMenu.items %}
          <div class="w-full sm:w-1/2 md:w-1/4 sm:px-5 mb-8 md:mb-0">
            <span class="block text-primary-light uppercase tracking-widest mb-5">Services</span>
            <nav
              role="navigation"
              aria-label="Footer Services Navigation"
            >
              <ul>
                {% for item in primaryMenu.items %}
                  <li class="{% if not loop.last %}mb-2{% endif %}"><a href="{{ item.url }}" class="text-white hover:text-secondary focus:text-secondary {{ item.class }}">{{ item.name }}</a></li>
                {% endfor %}
              </ul>
            </nav>
          </div>
        {% endif %}

        {% if secondaryMenu.items %}
          <div class="w-full sm:w-1/2 md:w-1/4 sm:px-5 mb-8 md:mb-0">
            <span class="block text-primary-light uppercase tracking-widest mb-5">Company</span>
            <nav
              role="navigation"
              aria-label="Footer Company Navigation"
            >
              <ul>
                {% for item in secondaryMenu.items %}
                  <li class="{% if not loop.last %}mb-2{% endif %}"><a href="{{ item.url }}" class="text-white hover:text-secondary focus:text-secondary {{ item.class }}">{{ item.name }}</a></li>
                {% endfor %}
              </ul>
            </nav>
          </div>
        {% endif %}
      </div>
    </div>
  </div>

  <div class="py-8">
    <div class="container">
      <div class="flex flex-wrap items-center">
        <div class="w-full md:flex-1 mb-8 md:mb-0">
          <span class="block text-primary-light text-sm">{{ site.title }} is a registered company in England.{% if options.reg_number %} Registered Number: {{ options.reg_number }}.{% endif %}{% if options.vat_number %} VAT Number: {{ options.vat_number }}.{% endif %}<br/>Â© {{ site.title }} {{ 'now' | date('Y') }}. All Rights Reserved.</span>
        </div>
        <div class="w-full md:w-auto md:ml-auto">
          {# Logo #}
          <a href="https://adtrak.co.uk" target="_blank" rel="noopener noreferrer" class="block md:mb-6 xl:mb-0">
            <svg class="w-24" viewBox="0 0 160 35" fill="none" xmlns="http://www.w3.org/2000/svg">
