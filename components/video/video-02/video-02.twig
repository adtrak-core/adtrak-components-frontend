{# Video - Variant 2 #}
<div class="overflow-hidden bg-gray-100">
  <div class="container py-8 md:py-10">
    <div class="flex flex-wrap items-center">
      <div class="z-10 order-2 w-full md:w-5/12 md:order-1 lg:-mr-12">
        <div class="copy text-primary md:p-6 lg:p-8 md:bg-white">
          <span class="block tracking-wider uppercase text-secondary">{{subheading}}</span>
          <span class="block mb-4 text-2xl font-bold lg:text-3xl">{{heading}}</span>
          
          {{content}}
        </div>
      </div>
      <div class="order-1 w-full mb-4 md:w-7/12 md:order-2 md:mb-0">
        <video controls class="w-full mb-5 md:mb-0">
          <source src="{{video}}" type="video/mp4">
          Sorry, your browser doesn't support embedded videos.
        </video>
      </div>
    </div>
  </div>
</div>