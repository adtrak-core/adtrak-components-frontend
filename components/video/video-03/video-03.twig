{# Video - Variant 3 #}
<div class="overflow-hidden bg-primary">
  <div class="container py-8 md:py-10">
    <div class="flex flex-wrap items-center md:-mx-8">
      <div class="order-2 w-full md:w-5/12 md:order-1 md:px-8">
        <div class="text-white">
          <span class="block tracking-wider uppercase text-secondary">{{subheading}}</span>
          <span class="block mb-4 text-2xl font-bold lg:text-3xl">{{heading}}</span>
          
          <div class="opacity-50 copy">
            {{content}}
          </div>
        </div>
      </div>
      <div class="order-1 w-full mb-4 md:w-7/12 md:order-2 md:mb-0 md:px-8">
        <video controls class="w-full mb-5 md:mb-0">
          <source src="{{video}}" type="video/mp4">
          Sorry, your browser doesn't support embedded videos.
        </video>
      </div>
    </div>
  </div>
</div>