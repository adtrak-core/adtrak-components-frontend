{# Downloads - Variant 2 #}
<div class="bg-white p-4">
  <div class="border border-gray-400 p-5">
    <span class="block text-lg font-bold text-secondary uppercase tracking-wider mb-2">Downloads Section</span>

    <ul>
      {% for download in downloads %}
        <li class="block">
          <a href="{{ download.url }}" class="block text-primary py-4 hover:text-secondary focus:text-secondary transition-all ease-in-out duration-300 hover:pl-2{{ loop.index != loop.length ? ' border-b border-gray-300' : ''}}">
            {{ download.title }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>