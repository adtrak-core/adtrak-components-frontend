{# News Index - Variant 1 #}
<div class="bg-white overflow-hidden">
  <div class="container py-6 md:py-10">
    <div class="flex flex-wrap md:-mx-5 lg:-mx-8">
      <div class="w-full md:w-2/3 md:px-5 lg:px-8">
        <div class="flex flex-wrap md:-mx-5 lg:-mx-8">
          {% for post in posts %}
            <div class="w-full md:w-1/2 md:px-5 lg:px-8 mb-10">
              <div class="bg-primary">
                <div class="py-2 px-6">
                  <div class="flex flex-wrap -mx-1 text-white">
                    <span class="inline-block px-1 text-sm flex-1">07/05/2020</span>
                    <span class="inline-block px-1 text-sm w-auto ml-auto uppercase tracking-wider">General</span>
                  </div>
                </div>

                <img src={{ post.thumbnail.src }} alt="{{ post.title }}" class="w-full" />

                <div class="p-6">
                  <span class="block text-white font-bold text-lg md:text-xl leading-tight mb-5">{{ post.title }}</span>

                  <div class="text-right">
                    <a href="#" class="bg-secondary text-white inline-block px-3 py-1 rounded hover:bg-secondary-dark focus:bg-secondary-dark">Button Title</a>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div> 

      <div class="w-full md:w-1/3 md:px-5 lg:px-8">
        <div class="border border-gray-200 bg-white p-6 lg:p-8 mb-6 md:mb-8">
          <span class="uppercase tracking-wider text-secondary block mb-4">Categories</span>

          <ul>
            {% for cat in categories %}
              <li><a href="{{ cat.url }}" class="w-full block py-1 text-primary hover:text-secondary focus:text-secondary">{{ cat.title }}</a></li>
            {% endfor %}
          </ul>
        </div>

        <div class="border border-gray-200 bg-white p-6 lg:p-8">
          <span class="uppercase tracking-wider text-secondary block mb-4">Follow Us</span>

          <ul>
            <li><a href="#" class="w-full block py-1 text-primary hover:text-secondary focus:text-secondary">Facebook</a></li>
            <li><a href="#" class="w-full block py-1 text-primary hover:text-secondary focus:text-secondary">Twitter</a></li>
            <li><a href="#" class="w-full block py-1 text-primary hover:text-secondary focus:text-secondary">Instagram</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>