{# Hero - Variant 3 #}
<div class="bg-secondary relative">
  <div class="container">
    <div class="flex flex-wrap">
      <div class="w-full max-w-md bg-primary py-24 md:py-32 xl:py-40 px-8 md:px-12 relative z-20">
        {# If the subheading data is passed in #}
        {% if subHeading %}
          <span class="text-secondary uppercase tracking-wider block mb-2">{{ subHeading }}</span>
        {% endif %}
        
        {# If the heading data is passed in #}
        {% if heading %}
          <h1 class="font-bold text-3xl md:text-4xl xl:text-5xl text-white leading-tight mb-6">{{ heading }}</h1>
        {% endif %}
        
        {# If the usps data is passed in #}
        {% if usps %}
          <ul class="list-inside list-disc mb-6">
            {% for usp in usps %}
              <li class="text-white mb-1">{{ usp.text }}</li>
            {% endfor %}
          </ul>
        {% endif %}

        {% if btns %}
          <div class="flex flex-wrap items-center">
            {% for btn in btns %}
              <a href="{{ btn.link }}" class="bg-secondary hover:bg-secondary-dark focus:bg-secondary-dark text-center border-2 border-transparent rounded-md text-white block px-4 py-2 md:mr-4 mb-3 w-full md:w-auto">{{ btn.text }}</a>
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
  
  {% if image %}
    {# The coloured "Mask" to make the image colour washed so the text is accessible #}
    <div class="absolute top-0 right-0 bottom-0 left-0 w-full z-10 bg-primary bg-opacity-75"></div>
    {# The actual Image #}
    <div class="absolute top-0 right-0 bottom-0 left-0 w-full z-0">
      {% if fractal %}
        <img src="{{ image.url }}" alt="{{ image.title }}" class="w-full h-full object-center object-cover" />
      {% else %}
        <img src="{{ image.src |resize(1200,900, 'center' )}}" alt="{{ image.title }}" class="w-full h-full object-center object-cover" />
      {% endif %}
    </div>
  {% endif %}
</div>