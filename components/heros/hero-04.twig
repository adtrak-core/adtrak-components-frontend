{# Hero - Variant 4 #}
<div class="bg-white relative">
  <div class="container">
    <div class="flex flex-wrap md:-mx-8">
      <div class="w-full md:w-1/2 md:px-8 order-2 md:order-1 py-6 md:py-32 xl:py-40">
        {# If the subheading data is passed in #}
        {% if subHeading %}
            <span class="text-secondary uppercase tracking-wider block mb-2 mt-4">{{ subHeading }}</span>
        {% endif %}
        
        {# If the heading data is passed in #}
        {% if heading %}
            <h1 class="font-bold text-3xl md:text-4xl xl:text-5xl leading-tight text-primary mb-6">{{ heading }}</h1>
        {% endif %}
        
        {# If the usps data is passed in #}
        {% if usps %}
            <ul class="list-inside list-disc mb-6">
            {% for usp in usps %}
                <li class="mb-1 text-primary">{{ usp }}</li>
            {% endfor %}
            </ul>
        {% endif %}

        {# If the btns boolean is true #}
        {% if btns %}
            <div class="flex flex-wrap items-center">
            <a href="#" class="bg-secondary hover:bg-secondary-dark focus:bg-secondary-dark text-white text-center border-2 border-transparent rounded-md block px-4 py-2 md:mr-4 mb-3 w-full md:w-auto">Button Title</a>
            <a href="#" class="bg-transparent text-center border-2 border-secondary rounded-md text-white block px-4 py-2 md:mr-4 mb-3 text-secondary w-full md:w-auto hover:border-secondary-dark focus:border-secondary-dark hover:text-secondary-dark focus:text-secondary-dark">Button Title</a>
            </div>
        {% endif %}
      </div>

      {# Image Block ... @TODO implement this properly #}
      <div class="order-1 md:order-2 md:absolute top-0 right-0 bottom-0 w-full md:w-1/2 h-64 md:h-full md:px-8 bg-secondary flex flex-wrap items-center justify-center mt-8 md:mt-0">
        <span class="block text-white font-mono">Image here</span>
      </div>
    </div>
  </div>
</div>