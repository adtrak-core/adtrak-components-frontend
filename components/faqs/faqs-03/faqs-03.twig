{# FAQs - Variant 3 #}
<div class="bg-gray-100 p-8">
  <div class="bg-white rounded-lg shadow-md">
    {% for faq in faqs %}
      <details class="{{ loop.index != loop.length ? ' border-b border-gray-200': ' ' }}">
        <summary class="text-primary text-left block w-full py-6 px-6 font-bold hover:text-secondary focus:text-secondary">
          {{ faq.faq_question }}
        </summary>
        <div class="max-w-2xl px-6 pb-2 pt-2">
          <p id="faq-{{ loop.index }}" class="text-primary text-sm md:text-base opacity-50 pb-5">
            {{ faq.faq_answer }}
          </p>
        </div>
      </details>
    {% endfor %}
  </div>
</div>