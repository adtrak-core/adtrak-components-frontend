{# Areas Covered - Variant 1 #}
<div class="bg-gray-100 py-8">
  <div class="container">
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2403.6974049482615!2d-1.1565069841763316!3d52.95386757989867!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4879c22aaa06ec43%3A0xec466c57bd5811ae!2sAdtrak!5e0!3m2!1sen!2suk!4v1600165073284!5m2!1sen!2suk" height="350" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0" class="w-full z-0 relative"></iframe>

    <div class="flex flex-wrap bg-white rounded-lg -mt-12 w-10/12 lg:w-8/12 relative z-10 mx-auto">
      {# Loop over locations (from ACF) #}
      {% for location in locations %}
        <div
          class="w-full md:w-1/2 lg:w-4/12 border-b border-gray-200
                {% if loop.index != 2 and loop.index != 4 and loop.index != 6 %}md:border-r{% endif %}
                {% if loop.index != 4 %}lg:border-r-0{% endif %}
                {% if loop.index != 3 and loop.index != 6 %}lg:border-r{% endif %}
          ">
          <div class="bg-transparent px-6 py-3 md:px-8 md:py-4 lg:py-6">
            <span class="text-primary">{{ location.title }}</span>
            <a href="tel:{{ location.number }}" class="text-primary hover:text-secondary focus:text-secondary block font-bold text-lg md:text-xl">{{ location.number }}</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>