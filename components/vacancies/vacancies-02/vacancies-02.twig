{# Vacancies - Variant 2 #}
<div class="bg-gray-100 py-6">
  <div class="container">
    {% for vacancy in vacancies %}
      <details class="bg-white rounded-md shadow-md mb-4">
        <summary class="text-left block font-bold text-xl md:text-2xl leading-tight w-full text-secondary py-5 px-10">{{ vacancy.title }}</summary>

        <div class="pt-3 pb-10 px-10 flex flex-wrap">
          <div class="w-full md:w-2/3 order-2 md:order-1">
            <div class="prose prose-sm max-w-none text-primary mb-6 w-full">
              {{ vacancy.content }}
            </div>

            <div class="text-right">
              {# @INTEGRATION - Check your contact link path below #}
              <a href="/contact" class="bg-secondary rounded text-white px-4 py-2 ml-auto">Apply Now</a>
            </div>
          </div>
          
          <div class="w-full md:w-1/3 order-1 md:order-1">
            <div class="border-b md:border-b-0 md:border-l border-gray-200 md:pl-12 md:ml-12 xl:pl-20 xl:ml-20 text-primary pb-8 md:pb-12 mb-8 md:mb-0">
              {% if not fractal and vacancy.meta('vacancy_location') %}
                <span class="block mb-1">{{ vacancy.meta('vacancy_location') }}</span>
              {% else %}
                <span class="block mb-1">Job Location</span>
              {% endif %}

              {% if not fractal and vacancy.meta('vacancy_working_hours') %}
                <span class="block mb-1">{{ vacancy.meta('vacancy_working_hours') }}</span>
              {% else %}
                <span class="block mb-1">Working Hours</span>
              {% endif %}

              {% if not fractal and vacancy.meta('vacancy_salary') %}
                <span class="block mb-1">{{ vacancy.meta('vacancy_salary') }}</span>
              {% else %}
                <span class="block">Salary</span>
              {% endif %}
            </div>
          </div>
        </div>
      </details>
    {% endfor %}
  </div>
</div>