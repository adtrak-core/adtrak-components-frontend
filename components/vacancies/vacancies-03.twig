{# Vacancies - Variant 3 #}
<div class="bg-primary py-6">
  <div class="container">
    <div class="bg-white shadow-md rounded rounded-md">
      {% for vacancy in vacancies %}
        <div class="{{ vacancy.active ? 'bg-gray-100' : 'bg-transparent' }}{{ loop.index != loop.length ? ' border-b border-gray-200' : ' ' }}">
            <button class="text-left block font-bold text-xl md:text-2xl leading-tight w-full text-primary py-6 md:py-8 px-8 md:px-10">{{ vacancy.title }}</button>

            {% if vacancy.active %}
              <div class="pb-8 md:pb-10 px-8 md:px-10">
                <div class="prose prose-sm max-w-none text-primary w-full pb-8">
                  {{ vacancy.description }}
                </div>

                <div class="text-center">
                  <a href="#" class="bg-secondary rounded text-white px-4 py-2 ml-auto">Apply Now</a>
                </div>
              </div>
            {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>
